{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "$schema": "https://json.schemastore.org/tsconfig"
}